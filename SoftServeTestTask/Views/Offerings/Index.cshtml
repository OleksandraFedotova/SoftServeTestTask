@model IEnumerable<SoftServeTestTask.Models.Offering>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OfferingDescr)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Family)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OfferingDescr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family.FamilyId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OfferingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OfferingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OfferingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
